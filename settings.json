{
  // fonts
  "editor.fontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "editor.inlineSuggest.fontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "editor.codeLensFontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "debug.console.fontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "scm.inputFontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "errorLens.fontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "gitlens.currentLine.fontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "gitlens.blame.fontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "markdown.preview.fontFamily": "system-ui, sans-serif",

  // make font italic
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.line",
          "comment.block",

          "keyword",
          "keyword.operator",
          "keyword.control",
          "keyword.other",
          "storage.type",
          "storage.modifier",

          "entity.other.attribute-name",

          "meta.tag.attribute",
          "entity.other.attribute-name.html",

          "meta.import",
          "meta.export",
          "meta.module",
          "meta.decorator",

          "variable.language"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // font ligatures
  "editor.fontLigatures": true,
  "terminal.integrated.fontLigatures": true,
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontLigatures.fallbackLigatures": [
    "<--",
    "<---",
    "<<-",
    "<-",
    "->",
    "->>",
    "-->",
    "--->",
    "<==",
    "<===",
    "<<=",
    "<=",
    "=>",
    "=>>",
    "==>",
    "===>",
    ">=",
    ">>=",
    "<->",
    "<-->",
    "<--->",
    "<---->",
    "<=>",
    "<==>",
    "<===>",
    "<====>",
    "::",
    ":::",
    "<~~",
    "</",
    "</>",
    "/>",
    "~~>",
    "==",
    "!=",
    "/=",
    "~=",
    "<>",
    "===",
    "!==",
    "!===",
    "<:",
    ":=",
    "*=",
    "*+",
    "<*",
    "<*>",
    "*>",
    "<|",
    "<|>",
    "|>",
    "+*",
    "=*",
    "=:",
    ":>",
    "/*",
    "*/",
    "+++",
    "<!--",
    "<!---"
  ],

  // minimap
  "editor.minimap.autohide": "mouseover",
  "editor.minimap.scale": 2,
  "editor.minimap.renderCharacters": false,

  // git
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  "gitlens.hovers.currentLine.over": "line",

  // formating and linting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "eslint.format.enable": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,

  // suggestions
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.suggest.quickSuggestions": {
    "commands": "on",
    "arguments": "on",
    "unknown": "on"
  },

  "editor.quickSuggestions": {
    "strings": "on",
    "comments": "on"
  },

  // spell cheacker
  "cSpell.words": ["Gouranga", "Samrat"],
  "cSpell.blockCheckingWhenLineLengthGreaterThan": 100000,

  // tailwind intelisense
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "javascriptreact": "javascript",
    "typescriptreact": "typescript"
  },

  // live server
  "liveServer.settings.AdvanceCustomBrowserCmdLine": "",
  "liveServer.settings.CustomBrowser": "firefox",
  "liveServer.settings.ChromeDebuggingAttachment": false,
  "liveServer.settings.root": "/",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  // window ui
  "window.title": "${dirty}${activeEditorShort}${profileName}${separator}${appName} With Gouranga ",
  "window.titleBarStyle": "custom",

  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "top",
  "workbench.panel.defaultLocation": "left",
  "workbench.tree.indent": 20,

  "workbench.editor.doubleClickTabToToggleEditorGroupSizes": "maximize",
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "none",

  // editor ui
  "editor.fontSize": 20,
  "editor.wordWrap": "on",

  "editor.cursorBlinking": "smooth",
  "editor.cursorWidth": 5,

  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,

  "editor.mouseWheelZoom": true,
  "terminal.integrated.mouseWheelZoom": true,

  "editor.linkedEditing": true,
  "editor.accessibilitySupport": "off",
  "editor.hover.delay": 700,
  "explorer.compactFolders": false,

  // terminal ui
  "workbench.panel.showLabels": false,
  "terminal.integrated.fontSize": 15,

  // files
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/node_modules": true
  },

  "diffEditor.codeLens": true,
  "editor.autoIndentOnPaste": true,
  "editor.snippetSuggestions": "top",

  // themes
  "workbench.colorTheme": "Dracula Theme",
  "workbench.iconTheme": "material-icon-theme"
}
