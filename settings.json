{
  // fonts
  "editor.fontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "editor.inlineSuggest.fontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font','FiraCode Nerd Font Mono'",
  "editor.codeLensFontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "editor.inlayHints.fontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "debug.console.fontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "scm.inputFontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "errorLens.fontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "gitlens.currentLine.fontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "gitlens.blame.fontFamily": "'Operator Mono','MonoLisa','JetBrainsMono Nerd Font'",
  "markdown.preview.fontFamily": "system-ui, sans-serif",

  // font styling (italic)
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.line",
          "comment.block",
          "keyword",
          "keyword.operator",
          "keyword.control",
          "keyword.other",
          "storage.type",
          "storage.modifier",
          "entity.other.attribute-name",
          "meta.tag.attribute",
          "entity.other.attribute-name.html",
          "meta.import",
          "meta.export",
          "meta.module",
          "meta.decorator",
          "variable.language"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // font ligatures
  "editor.fontLigatures": true,
  "terminal.integrated.fontLigatures.featureSettings": "\"calt\" on",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontLigatures.fallbackLigatures": [
    "<--",
    "<---",
    "<<-",
    "<-",
    "->",
    "->>",
    "-->",
    "--->",
    "<==",
    "<===",
    "<<=",
    "<=",
    "=>",
    "=>>",
    "==>",
    "===>",
    ">=",
    ">>=",
    "<->",
    "<-->",
    "<--->",
    "<---->",
    "<=>",
    "<==>",
    "<===>",
    "<====>",
    "::",
    ":::",
    "<~~",
    "</",
    "</>",
    "/>",
    "~~>",
    "==",
    "!=",
    "/=",
    "~=",
    "<>",
    "===",
    "!==",
    "!===",
    "<:",
    ":=",
    "*=",
    "*+",
    "<*",
    "<*>",
    "*>",
    "<|",
    "<|>",
    "|>",
    "+*",
    "=*",
    "=:",
    ":>",
    "/*",
    "*/",
    "+++",
    "<!--",
    "<!---"
  ],

  // editor ui
  "editor.fontSize": 21,
  "editor.wordWrap": "on",
  "editor.cursorBlinking": "smooth",
  "editor.cursorWidth": 5,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.mouseWheelZoom": true,
  "editor.linkedEditing": true,
  "editor.accessibilitySupport": "off",
  "editor.hover.delay": 700,
  "editor.autoIndentOnPaste": true,
  "editor.stickyScroll.enabled": true,
  "editor.snippetSuggestions": "top",

  // minimap
  "editor.minimap.autohide": "mouseover",
  "editor.minimap.scale": 2,
  "editor.minimap.renderCharacters": false,

  // suggestions
  "editor.quickSuggestions": {
    "strings": "on",
    "comments": "on"
  },
  "editor.quickSuggestionsDelay": 0,
  "editor.suggestOnTriggerCharacters": true,
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.suggest.quickSuggestions": {
    "commands": "on",
    "arguments": "on",
    "unknown": "on"
  },

  // formatting & linting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "eslint.format.enable": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,

  // typescript / javascript
  "typescript.inlayHints.parameterNames.enabled": "all",
  "javascript.inlayHints.parameterNames.enabled": "all",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // git & gitlens
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  "gitlens.hovers.currentLine.over": "line",

  // spell checker
  "cSpell.words": ["Gouranga", "Samrat"],
  "cSpell.blockCheckingWhenLineLengthGreaterThan": 100000,

  // tailwind css
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "javascriptreact": "javascript",
    "typescriptreact": "typescript"
  },
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/.svn/**",
    "**/.next/**"
  ],

  // emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },

  // live server
  "liveServer.settings.AdvanceCustomBrowserCmdLine": "--new-instance --no-remote",
  "liveServer.settings.CustomBrowser": "firefox",
  "liveServer.settings.ChromeDebuggingAttachment": false,
  "liveServer.settings.root": "/",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  // window ui
  "window.title": "${dirty}${activeEditorShort}${profileName}${separator}${appName} With Gouranga ",
  "window.titleBarStyle": "custom",

  // workbench ui
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "top",
  "workbench.panel.defaultLocation": "left",
  "workbench.tree.indent": 20,
  "workbench.editor.doubleClickTabToToggleEditorGroupSizes": "maximize",
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "none",
  "workbench.panel.showLabels": false,

  // terminal ui
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.mouseWheelZoom": true,

  // files
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/.git": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/dist/**": true,
    "**/.next/**": true,
    "**/build/**": true,
    "**/.cache/**": true,
    "**/coverage/**": true,
    "**/.vscode/**": true,
    "**/.turbo/**": true,
    "**/out/**": true
  },

  // search
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/.git": true,
    "**/coverage": true,
    "**/.turbo": true,
    "**/yarn.lock": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true
  },

  // extensions
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.experimental.affinity": {
    "eamodio.gitlens": 1,
    "dbaeumer.vscode-eslint": 1,
    "esbenp.prettier-vscode": 1
  },

  // disable unused things
  "telemetry.telemetryLevel": "off",
  "gitlens.telemetry.enabled": false,

  // diff editor
  "diffEditor.codeLens": true,

  // explorer
  "explorer.compactFolders": false,

  // themes
  "workbench.colorTheme": "Dracula Theme",
  "workbench.iconTheme": "material-icon-theme"
}
