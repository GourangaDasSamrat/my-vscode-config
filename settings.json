{
  // theme
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Dracula Theme",

  // fonts
  "editor.fontFamily": "Mono Lisa, Fira Code",
  "editor.inlineSuggest.fontFamily": "Mono Lisa, Fira Code",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "editor.codeLensFontFamily": "Mono Lisa, Fira Code",
  "debug.console.fontFamily": "Mono Lisa, Fira Code",
  "scm.inputFontFamily": "Mono Lisa, Fira Code",
  "errorLens.fontFamily": "Mono Lisa, Fira Code",
  "gitlens.currentLine.fontFamily": "Mono Lisa, Fira Code",
  "gitlens.blame.fontFamily": "Mono Lisa, Fira Code",
  "markdown.preview.fontFamily": "Poppins, system-ui, 'Ubuntu', sans-serif",

  // font ligatures
  "editor.fontLigatures": true,
  "terminal.integrated.fontLigatures": true,
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontLigatures.fallbackLigatures": [
    "<--",
    "<---",
    "<<-",
    "<-",
    "->",
    "->>",
    "-->",
    "--->",
    "<==",
    "<===",
    "<<=",
    "<=",
    "=>",
    "=>>",
    "==>",
    "===>",
    ">=",
    ">>=",
    "<->",
    "<-->",
    "<--->",
    "<---->",
    "<=>",
    "<==>",
    "<===>",
    "<====>",
    "::",
    ":::",
    "<~~",
    "</",
    "</>",
    "/>",
    "~~>",
    "==",
    "!=",
    "/=",
    "~=",
    "<>",
    "===",
    "!==",
    "!===",
    "<:",
    ":=",
    "*=",
    "*+",
    "<*",
    "<*>",
    "*>",
    "<|",
    "<|>",
    "|>",
    "+*",
    "=*",
    "=:",
    ":>",
    "/*",
    "*/",
    "+++",
    "<!--",
    "<!---"
  ],

  // minimap
  "editor.minimap.autohide": "mouseover",
  "editor.minimap.scale": 2,
  "editor.minimap.renderCharacters": false,

  // live server
  "liveServer.settings.AdvanceCustomBrowserCmdLine": "",
  "liveServer.settings.CustomBrowser": "firefox",
  "liveServer.settings.ChromeDebuggingAttachment": false,
  "liveServer.settings.root": "/",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  // git
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",

  "gitlens.hovers.currentLine.over": "line",

  // formating and linting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.fixAll.tslint": "always",
    "source.organizeImports": "always"
  },
  "eslint.format.enable": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,

  // suggestions
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.suggest.quickSuggestions": {
    "commands": "on",
    "arguments": "on",
    "unknown": "on"
  },

  "editor.quickSuggestions": {
    "strings": "on",
    "comments": "on"
  },

  // spell cheacker
  "cSpell.words": ["Gouranga", "Samrat"],
  "cSpell.blockCheckingWhenLineLengthGreaterThan": 100000,

  // app ui
  "window.customTitleBarVisibility": "never",
  "window.title": "${dirty}${activeEditorShort}${profileName}${separator}${appName} With Gouranga ",
  "window.titleBarStyle": "custom",

  "workbench.sideBar.location": "right",
  "workbench.tree.indent": 20,

  "workbench.editor.doubleClickTabToToggleEditorGroupSizes": "maximize",
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "none",

  // editor ui
  "editor.fontSize": 18,
  "editor.wordWrap": "on",

  "editor.cursorBlinking": "smooth",
  "editor.cursorWidth": 5,

  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,

  "editor.mouseWheelZoom": true,
  "terminal.integrated.mouseWheelZoom": true,

  "editor.linkedEditing": true,
  "editor.accessibilitySupport": "off",
  "editor.hover.delay": 700,
  "explorer.compactFolders": false,

  // files
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "diffEditor.codeLens": true
}
